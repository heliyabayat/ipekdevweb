---
import Menu from "./Menu.astro";
---

<header
  id="topHeader"
  class="lg:px-8 lg:pt-8 fixed start-0 end-0 z-50 transition-all ease-in-out duration-300"
>
  <div
    id="navbar"
    class="navbar lg:rounded-xl backdrop-blur-md px-4 py-4 transition-all ease-in-out duration-300"
  >
    <div class="navbar-start w-auto">
      <div class="dropdown">
        <label tabindex="0" class="btn btn-ghost lg:hidden">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            ><path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h8m-8 6h16"></path></svg
          >
        </label>
        <ul
          tabindex="0"
          class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-white rounded-box w-52"
        >
          <Menu />
        </ul>
      </div>
      <a class="btn btn-ghost normal-case text-xl">IpekDev Co.</a>
    </div>
    <div class="navbar-center hidden lg:flex">
      <ul class="menu menu-horizontal items-center">
        <li>
          <a href="#intro">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="w-5 h-5"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25"
              ></path>
            </svg>
          </a>
        </li>
        <Menu />
      </ul>
    </div>
    <div class="navbar-end flex flex-grow justify-end">
      <a href="" class="btn btn-primary">Contact Us</a>
    </div>
  </div>
</header>

<script>
  const topHeader = document.getElementById("topHeader");

  const navbar = document.getElementById("navbar");

  let navbarOffset = navbar?.offsetTop || 150;

  document.addEventListener("scroll", () => {
    if (window.scrollY >= navbarOffset) {
      topHeader?.classList.remove("lg:px-8", "lg:pt-8");
      navbar?.classList.remove("lg:rounded-xl", "lg:px-4", "lg:py-4");
      navbar?.classList.add("bg-white", "bg-opacity-10", "shadow-sm");
    } else {
      topHeader?.classList.add("lg:px-8", "lg:pt-8");
      navbar?.classList.add("lg:rounded-xl", "lg:px-4", "lg:py-4");
      navbar?.classList.remove("bg-white", "bg-opacity-10", "shadow-sm");
    }
  });
</script>
